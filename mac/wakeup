net=`system_profiler SPAirPortDataType | awk -F':' '/Current Network Information:/ { 
    getline 
    sub(/^ */, "") 
    sub(/:$/, "") 
    print 
}'`

# If located in designated Wifi
if [ "$net"x = "Test4WIFI"x ];then
